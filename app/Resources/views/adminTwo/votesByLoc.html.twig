{% extends 'base.html.twig' %}
{% block title %}
    Administrator - Votes By Location
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {#<h2 class="animated bounceInLeft">Welcome, Administrator!</h2>#}
            <h2 class="text-center"><strong>Votes By Location</strong></h2>

            <div class="col-md-12">
                <table class="table table-hover animated fadeIn">
                    <thead>
                    <tr>
                        <th>Location</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for location in locations %}
                        <tr>
                            {% if location.name != "City Hall" %}
                                <td>{{ location.name }}</td>
                                <td>
                                    <a href="{{ path('admin_two_votes_by_location_status', {'id': location.id}) }}" class="btn btn-primary"><i class="fa fa-eye"></i> View</a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



