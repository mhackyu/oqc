{% if app.session.started and app.session.flashBag.peekAll is not empty %}
    <div class="messages">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                {# Bootstrap alert, see http://getbootstrap.com/components/#alerts #}
                <div class="container-fluid">
                    <div class="animated fadeInDown alert alert-dismissible alert-{{ type }} bg-{{ type }} text-white" role="alert">
                        <button id="close-alert" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message|trans|raw }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
